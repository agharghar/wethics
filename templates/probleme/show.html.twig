{% extends 'base.html.twig' %}

{% block title %}Probleme{% endblock %}

{% block body %}
    <h1>Probleme</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ probleme.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ probleme.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ probleme.description }}</td>
            </tr>
            <tr>
                <th>Date_mise_online</th>
                <td>{{ probleme.dateMiseOnline ? probleme.dateMiseOnline|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fermer</th>
                <td>{{ probleme.fermer ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('probleme_index') }}">back to list</a>

    <a href="{{ path('probleme_edit', {'id': probleme.id}) }}">edit</a>

    {{ include('probleme/_delete_form.html.twig') }}
{% endblock %}
