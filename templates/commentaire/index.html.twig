{% extends 'base.html.twig' %}

{% block title %}Commentaire index{% endblock %}

{% block body %}
    <h1>Commentaire index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Flag_solution</th>
                <th>Moyenne_benefice</th>
                <th>Moyenne_risque</th>
                <th>Objectif_de_soins</th>
                <th>Objectif_ethiques</th>
                <th>Modeles_de_soins</th>
                <th>Contectes_de_soin</th>
                <th>Methode_evaluation</th>
                <th>Date_mise_en_ligne</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.description }}</td>
                <td>{{ commentaire.flagSolution ? 'Yes' : 'No' }}</td>
                <td>{{ commentaire.moyenneBenefice }}</td>
                <td>{{ commentaire.moyenneRisque }}</td>
                <td>{{ commentaire.objectifDeSoins }}</td>
                <td>{{ commentaire.objectifEthiques }}</td>
                <td>{{ commentaire.modelesDeSoins }}</td>
                <td>{{ commentaire.contectesDeSoin }}</td>
                <td>{{ commentaire.methodeEvaluation }}</td>
                <td>{{ commentaire.dateMiseEnLigne ? commentaire.dateMiseEnLigne|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('commentaire_show', {'id': commentaire.id}) }}">show</a>
                    <a href="{{ path('commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commentaire_new') }}">Create new</a>
{% endblock %}
